{
  "name": "@trysound/inferno-datagrid",
  "version": "0.7.0",
  "main": "dist/inferno-datagrid.js",
  "files": [
    "dist"
  ],
  "repository": "trysound/inferno-datagrid",
  "author": "Bogdan Chadkin <trysound@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build-example": "cross-env NODE_ENV=production webpack",
    "start": "webpack-dev-server --hot --open",
    "test": "cross-env BABEL_ENV=test jest --coverage",
    "start-test": "yarn test -- --watchAll",
    "prepublish": "rollup -c"
  },
  "jest": {
    "coverageReporters": [
      "text-summary",
      "html"
    ]
  },
  "babel": {
    "plugins": [
      [
        "transform-react-jsx",
        {
          "pragma": "createElement",
          "useBuiltIns": true
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.0",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babili-webpack-plugin": "^0.0.11",
    "cross-env": "^3.2.4",
    "css-loader": "^0.27.3",
    "eslint": "^3.15.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-react": "^6.10.0",
    "highlight.js": "^9.10.0",
    "history": "^4.6.0",
    "html-webpack-plugin": "^2.26.0",
    "inferno-router": "^1.4.1",
    "jest-cli": "^19.0.2",
    "raw-loader": "^0.5.1",
    "rollup": "^0.41.5",
    "rollup-plugin-babel": "^2.7.1",
    "style-loader": "^0.14.1",
    "webpack": "^2",
    "webpack-dev-server": "^2"
  },
  "dependencies": {
    "inferno": "^1.4.1",
    "inferno-component": "^1.4.1",
    "inferno-create-element": "^1.4.1"
  }
}
